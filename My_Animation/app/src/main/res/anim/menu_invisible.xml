<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!--set은 여러 개의 속성(투명도, 좌표, 화전)을 하나로 묶어서 관리할 수 있도록 해주는 영역-->

    <!--메뉴를 숨기는 애니메이션-->
    <!--android:fromAlpha : 애니메이션 시작 알파값, 0.0이면 완전 불투명
        android:toAlpha : 끝 알파값 1.0이면 완전 불투명
        android:duration : 애니메이션 진행시간 -->
    <alpha android:fromAlpha="1.0"
        android:toAlpha="0.0"
        android:duration="500"/>

    <!--android:fromXDelta : 처음 x좌표 위지
        android:toXDelta : 끝 x좌표 위치
        android:fromYDelta : 처음 y좌표 위치
        android:toYDelta : 끝 y좌표 위치
        android:duration="500 -->

    <translate android:fromXDelta="0%p"
        android:toXDelta="-100%p"
        android:fromYDelta="0%p"
        android:toYDelta="0%p"
        android:duration="500"/>
</set>